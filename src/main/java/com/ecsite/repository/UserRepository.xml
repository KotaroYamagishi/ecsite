<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ecsite.repository.UserRepository">
    <select id="findByEmailAndPassWord" resultType="com.ecsite.domain.User">
        SELECT * FROM users WHERE email=#{email} AND password=#{password}
    </select>
    <select id="findByEmail" resultType="com.ecsite.domain.User">
        SELECT * FROM users WHERE email=#{email} 
    </select>
    <insert id="insert" parameterType="com.ecsite.domain.User">
        INSERT INTO users(name,email,password,zipcode,address,telephone) VALUES(#{name},#{email},#{password},#{zipcode},#{address},#{telephone})
    </insert>
    <delete id="delete">
        DELETE FROM users WHERE id=#{id}
    </delete>
</mapper>